<article class="yui3-u-1 signin">
		
	<h1>SignIn</h1>

	<%= form_for(:session, :url => sessions_path) do |f| %>
	
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </div>
	  <div class="field">
	    <%= f.label :password %><br />
	    <%= f.password_field :password %>
	  </div>
	  <div class="actions">
	    <%= f.submit "SignIn" %>
	  </div>
	
	<% end %>
		
</article>