<p  class="notice"><%= notice %></p>
 
<p>
  <b>Name:</b>
  <%= @page.name %>
</p>
 
<p>
  <b>Title:</b>
  <%= @page.title %>
</p>
 
<p>
  <b>Content:</b>
  <%= @page.content %>
</p>

<h2>Comments</h2>
<% @page.comments.each do |comment| %>
  <p>
    <b>Commenter:</b>
    <%= comment.commenter %>
  </p>
 
  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@page, @page.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
 
<%= link_to 'Edit Post', edit_page_path(@page) %> |
<%= link_to 'Back to Posts', pages_path %> |

